<%= render 'shared/errors', obj: @sector %>
<script src="//maps.google.com/maps/api/js?key=AIzaSyDpbSkYMrPiBfDApjWSH04B1XDlt3k18xg"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<%= form_for([@country,@city,@sector], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %><br/>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre sector',autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :zip %><br/>
      </div>
      <div class="col-md-8">
        <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip code'%>
      </div>
    </div>
    <div class="form-group">
      <div style='width: 800px;'>
        <div id="map" style='width: 800px; height: 400px;'></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
<% end %>
<div class='col-xs-4 col-xs-offset-4'>
  [<%= link_to "Cancelar",country_city_path(@country,@city) %>]
</div>
