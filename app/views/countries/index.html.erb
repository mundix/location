<h1>Paises</h1>
<div align="center">
  <% @countries.each do |country| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
              <span><%= link_to "#{country.name}", edit_country_path(country) %></span>
              <small><%= link_to "Ciudades: #{country.cities.count}",country_cities_path(country) %></small>
            </li>
          </div>
        </div>
      </ul>
  <% end %>
</div>