<%= render 'shared/errors', obj: @city %>

<%= form_for([@country,@city], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %><br/>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre ciudad',autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :zip %><br/>
      </div>
      <div class="col-md-8">
        <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip code'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
<% end %>
<div class='col-xs-4 col-xs-offset-4'>
  [<%= link_to "Cancelar",country_cities_path(@country) %>]
</div>
